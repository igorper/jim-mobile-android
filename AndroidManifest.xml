<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trainerjim.android"
    android:versionCode="7"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/jim_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.trainerjim.android.storage.TrainingContentProvider"
            android:authorities="com.trainerjim.android.storage.TrainingContentProvider"
            android:exported="false" />

        <activity
            android:name="com.trainerjim.android.TrainingActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trainerjim.android.TrainingManifestActivity"
            android:label="Expandable LV" >
        </activity>
        <activity android:name="com.trainerjim.android.TrainingSelectionList" />
        <activity
            android:name="com.trainerjim.android.LoginActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>

        <service android:name="com.trainerjim.android.DetectorService" />
        <service android:name="com.trainerjim.android.network.ServerCommunicationService" />

        <activity android:name="com.trainerjim.android.UploadSessionActivity" />
    </application>

</manifest>
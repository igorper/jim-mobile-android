<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.pernek.jim.exercisedetector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.pernek.jim.exercisedetector.TrainingActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.pernek.jim.exercisedetector.TrainingManifestActivity"
            android:label="Expandable LV" >
        </activity>
        <activity android:name="net.pernek.jim.exercisedetector.ui.TrainingSelectionList" />
        <activity
            android:name="net.pernek.jim.exercisedetector.LoginActivity"
            android:excludeFromRecents="true"
            android:label="@string/app_name"
            android:noHistory="true" >
        </activity>

        <service android:name="net.pernek.jim.exercisedetector.DetectorService" />
        <service android:name="net.pernek.jim.exercisedetector.DataUploaderService" />

        <activity android:name="net.pernek.jim.exercisedetector.UploadSessionActivity" />
    </application>

</manifest>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
     <style name="standard_button" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_margin">@dimen/standard_button_padding</item>
        <item name="android:background">@drawable/standard_button_background_style</item>
        <item name="android:padding">@dimen/standard_button_padding</item>
        <item name="android:textColor">@drawable/standard_button_text_style</item>
    </style>

    <style name="JimShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#CCFFD454</item>
        <item name="sv_showcaseColor">#FF0080D0</item>
        <item name="sv_buttonText">Got it</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/JimShowcaseTitle</item>
        <item name="sv_detailTextAppearance">@style/JimShowcaseDetails</item>
    </style>

    <style name="JimShowcaseTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#FF0080D0</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JimShowcaseDetails" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
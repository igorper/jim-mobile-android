<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:jim="http://schemas.android.com/apk/res/net.pernek.jim.exercisedetector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F2F2"
    android:keepScreenOn="true"
    android:orientation="horizontal" >

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <net.pernek.jim.exercisedetector.ui.CircularProgressControl
                        android:id="@+id/circularProgress"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingBottom="@dimen/circular_button_bottom_padding"
                        android:paddingLeft="@dimen/circular_button_side_padding"
                        android:paddingRight="@dimen/circular_button_side_padding"
                        android:paddingTop="@dimen/circular_button_top_padding" />

                    <ImageView
                        android:id="@+id/info_button"
                        android:layout_width="@dimen/info_button_size"
                        android:layout_height="@dimen/info_button_size"
                        android:layout_alignParentRight="true"
                        android:onClick="onInfoButtonClick"
                        android:padding="@dimen/info_button_padding"
                        android:src="@drawable/chair_ico"
                        android:visibility="invisible" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/bottomContainer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/status_rect_height"
                            android:layout_gravity="center"
                            android:background="@color/jim_orange" >

                            <LinearLayout
                                android:id="@+id/trainingSelector"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:onClick="onSelectTrainingClick"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Workout selected:"
                                    android:textColor="@color/jim_black"
                                    android:textSize="@dimen/status_rect_training_selection_small_font_size" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top" >

                                    <!-- It's really hard to pick the optimal triangle size and align it with the text (this should be done from scratch with low level drawing in the future -->

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_centerHorizontal="true" >

                                        <TextView
                                            android:id="@+id/trainingSelectorText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:gravity="top"
                                            android:includeFontPadding="false"
                                            android:textColor="@color/jim_red"
                                            android:textSize="@dimen/status_rect_training_selection_font_size" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="top|left"
                                            android:layout_marginLeft="10dp"
                                            android:adjustViewBounds="true"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/arrow_red_down" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </LinearLayout>

                            <net.pernek.jim.exercisedetector.ui.SwipeControl
                                android:id="@+id/swipeControl"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fadingEdge="none"
                                android:fillViewport="true"
                                android:scrollbars="none"
                                android:visibility="invisible"
                                jim:textLeftOff="Later"
                                jim:textRightOff="Skip"
                                jim:typefacePathAssets="fonts/OpenSans-Regular.ttf" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/seriesInformation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp" >

                            <ImageView
                                android:id="@+id/imageArrowSeriesInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_gravity="center_vertical|left"
                                android:layout_marginRight="5dp"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter"
                                android:src="@drawable/arrow_orange_right" />

                            <TextView
                                android:id="@+id/nextSeriesText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text="Series 2 (10 reps, 40 kg)"
                                android:textColor="@color/jim_blue"
                                android:textSize="20dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/animationRectangle"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#ff0000"
                android:orientation="horizontal"
                android:visibility="gone" >
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/viewRateExercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iconWeight"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:padding="20dp"
                    android:src="@drawable/weight" />

                <LinearLayout
                    android:background="@color/jim_orange"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Rate to proceed!"
                        android:textColor="@color/jim_red"
                        android:textSize="@dimen/finnish_button_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/exerciseRating1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onExerciseRatingSelected"
                            android:padding="@dimen/exercise_rating_smile_padding"
                            android:src="@drawable/rating1" />

                        <ImageView
                            android:id="@+id/exerciseRating2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onExerciseRatingSelected"
                            android:padding="@dimen/exercise_rating_smile_padding"
                            android:src="@drawable/rating2" />

                        <ImageView
                            android:id="@+id/exerciseRating3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onExerciseRatingSelected"
                            android:padding="@dimen/exercise_rating_smile_padding"
                            android:src="@drawable/rating3" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- RATE TRAINING SCREEN -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/jim_background"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/training_rating_top_margin"
                android:background="@color/jim_orange"
                android:gravity="center"
                android:paddingBottom="@dimen/finnish_button_padding"
                android:paddingTop="@dimen/finnish_button_padding"
                android:text="How was it?"
                android:textColor="@color/jim_red"
                android:textSize="@dimen/finnish_button_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/trainingRating1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTrainingRatingSelected"
                    android:padding="@dimen/training_rating_smile_padding" />

                <ImageView
                    android:id="@+id/trainingRating2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTrainingRatingSelected"
                    android:padding="@dimen/training_rating_smile_padding" />

                <ImageView
                    android:id="@+id/trainingRating3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTrainingRatingSelected"
                    android:padding="@dimen/training_rating_smile_padding" />

                <!-- <ImageView -->
                <!-- android:id="@+id/trainingRating4" -->
                <!-- android:layout_width="0dp" -->
                <!-- android:layout_height="match_parent" -->
                <!-- android:layout_weight="1" -->
                <!-- android:onClick="onTrainingRatingSelected" -->
                <!-- android:padding="@dimen/training_rating_smile_padding" /> -->
            </LinearLayout>

            <EditText
                android:id="@+id/textTrainingComment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/finnish_button_padding"
                android:layout_weight="1"
                android:background="@drawable/training_comment_border"
                android:gravity="top"
                android:hint="comment ..."
                android:inputType="textShortMessage"
                android:padding="@dimen/finnish_button_padding"
                android:textColor="@color/training_comment_text"
                android:textSize="@dimen/training_comment_text_size" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/finnish_button_padding"
                android:background="@drawable/blue_button_style"
                android:onClick="onFinishClick"
                android:padding="@dimen/finnish_button_padding"
                android:text="Finish"
                android:textColor="@drawable/blue_button_text"
                android:textSize="@dimen/finnish_button_text_size" />
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>
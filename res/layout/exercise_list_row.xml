<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/exercise_menu_item_height"
        android:maxWidth="@dimen/exercise_menu_item_name_width"
        android:textSize="@dimen/exercise_menu_item_text_size"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:textColor="@color/exercise_menu_item_text"
        android:text="Name" />
    <TextView
        android:id="@+id/tvSeriesInfo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/exercise_menu_item_height"
        android:textSize="@dimen/exercise_menu_item_text_size"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textColor="@color/exercise_menu_item_series_text"
        android:text="Name" />
</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1F2F2"
    android:orientation="horizontal" >

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <net.pernek.jim.exercisedetector.CircularProgressControl
                android:id="@+id/circularProgress"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00aa00" />

            <net.pernek.jim.exercisedetector.ui.SwipeControl
                android:id="@+id/scroller"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00ff00"
                android:fadingEdge="none"
                android:fillViewport="true"
                android:scrollbars="none" />
        </LinearLayout>

        <!-- RATE TRAINING SCREEN -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/jim_background"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/training_rating_top_margin"
                android:background="@color/jim_orange"
                android:gravity="center"
                android:paddingBottom="@dimen/finnish_button_padding"
                android:paddingTop="@dimen/finnish_button_padding"
                android:text="How was it?"
                android:textColor="@color/jim_red"
                android:textSize="@dimen/finnish_button_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/trainingRating1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTrainingRatingSelected"
                    android:padding="@dimen/training_rating_smile_padding" />

                <ImageView
                    android:id="@+id/trainingRating2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTrainingRatingSelected"
                    android:padding="@dimen/training_rating_smile_padding" />

                <ImageView
                    android:id="@+id/trainingRating3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTrainingRatingSelected"
                    android:padding="@dimen/training_rating_smile_padding" />

                <ImageView
                    android:id="@+id/trainingRating4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTrainingRatingSelected"
                    android:padding="@dimen/training_rating_smile_padding" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/finnish_button_padding"
                android:layout_weight="1"
                android:background="@drawable/training_comment_border"
                android:gravity="top"
                android:inputType="textShortMessage"
                android:padding="@dimen/finnish_button_padding"
                android:text="comment ..."
                android:textColor="@color/training_comment_text"
                android:textSize="@dimen/training_comment_text_size" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/finnish_button_padding"
                android:background="@drawable/finnish_button_style"
                android:onClick="testClick"
                android:padding="@dimen/finnish_button_padding"
                android:text="Finnish"
                android:textColor="@drawable/finnish_button_text"
                android:textSize="@dimen/finnish_button_text_size" />
        </LinearLayout>
    </ViewFlipper>

</LinearLayout>